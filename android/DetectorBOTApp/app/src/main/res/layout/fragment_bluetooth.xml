<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <!-- TODO: Update blank fragment layout -->

    <Switch
        android:id="@+id/switchBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="13dp"
        android:text="@string/turnBt"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_Blutooth"
        style="@style/Widget.AppCompat.Light.ActionMode.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_below="@+id/ib_refresh"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />

    <ImageButton
        android:id="@+id/ib_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_founded_bt_adress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:background="@color/transparent"
        android:src="@drawable/research_btn"
        tools:src="@drawable/research_btn" />

    <TextView
        android:id="@+id/tv_founded_bt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchBt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:text="Device Name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_founded_bt_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_founded_bt_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:text="MacAdress:" />

    <ImageButton
        android:id="@+id/ib_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_founded_bt_adress"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/ib_refresh"
        android:background="@color/transparent"
        android:src="@drawable/visible_btn" />

</RelativeLayout>