<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_bluetooth_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/appPrimary"
        android:text="Bluetooth Settings" />

    <View
        android:id="@+id/line_first"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_bluetooth_title"
        android:background="@color/appPrimary"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/line_first"
        android:background="@color/appPrimary"/>

    <Switch
        android:id="@+id/switchBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/tv_bluetooth_title"
        android:layout_marginTop="60dp"
        android:text="@string/turnBt"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_Blutooth"
        style="@style/Widget.AppCompat.Light.ActionMode.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forward_distance"
        android:layout_alignStart="@+id/switchBt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="15dp"
        android:background="#00CECECE"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />

    <TextView
        android:id="@+id/tv_founded_bt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchBt"
        android:layout_alignStart="@+id/switchBt"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:text="Device Statu:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_forward_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_founded_bt_name"
        android:layout_alignStart="@+id/tv_founded_bt_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="readBuffer:" />

</RelativeLayout>