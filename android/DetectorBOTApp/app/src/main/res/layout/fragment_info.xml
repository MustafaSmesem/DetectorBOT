                    android:id="@+id/score_label"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Score: "/>
                <TextView
                    android:id="@+id/score_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="score"/>
