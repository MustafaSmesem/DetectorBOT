                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Label: "/>
                <TextView
                    android:id="@+id/label_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="label"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:padding="10dp">
